---
import { SITE_TITLE, SITE_EMAIL,SITE_URL} from "../consts";
const { theme } = Astro.props;
const { pathname } = Astro.url;
import { SITE_NAME } from "../consts";
const date = new Date();
const year = date.getFullYear();
---

<div class:list={["footer-main", { "footer-dark": theme === "dark" }]}>
  <div class="content-body footer-wraper">
    <div class="footer-box">
      <div class="foot-nav">
        <div class="foot-nav-items">
          <div class="item">
            <div class="item-title">邮箱</div>
            <div class="email">{SITE_EMAIL}</div>
          </div>

          <div class="item community">
            <div class="item-title">名片</div>
            <a href="https://the.top/ikeno">THE.TOP</a>
          </div>

          <div class="item resources">
            <div class="item-title">分享</div>
            <div class="item-title">{theme}</div>
            <button class="button" data-sharer="twitter" data-title={SITE_TITLE} data-hashtags="blog" data-url={`${SITE_URL}${pathname}`}>Twitter</button>
          </div>
        </div>
      </div>
      <div class="bottom">
        <div class="copyright">
          &copy; {`2023-${year}  ${SITE_NAME}`} 
          <a href="//github.com/austin2035/astro-air-blog">by Astro</a>
        </div>
      </div>
    </div>
  </div>
</div>
